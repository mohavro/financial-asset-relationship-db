[flake8]
max-line-length = 120
max-complexity = 15
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    .mypy_cache,
    .pytest_cache

# Error codes to ignore
# E203: Whitespace before ':' (conflicts with black formatter)
# E501: Line too long (handled by max-line-length and black)
# W503: Line break before binary operator (conflicts with black formatter)
# E231: Missing whitespace after ',' (handled by black)
ignore =
    E203,
    E501,
    W503,
    E231

per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F403,F811

# Count errors
count = True
statistics = True
show-source = True
